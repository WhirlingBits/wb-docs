{
  "name": "wb-docs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "del-cli docs/out docs/mdx || true",
    "doxygen": "mkdir -p docs/out && doxygen Doxyfile",
    "convert-doxygen": "doxygen2docusaurus",
    "generate-docs": "npm run clean && npm run doxygen && npm run convert-doxygen",
    "build": "npm run generate-docs && docusaurus build",
    "start": "docusaurus start",
    "serve": "docusaurus serve"
  },
  "dependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/preset-classic": "^3.9.2"
  },
  "devDependencies": {
    "@xpack/doxygen2docusaurus": "^2.0.0",
    "del-cli": "^5.1.0"
  },
  "config": {
    "doxygen2docusaurus": {
      "baseUrl": "/micro-test-plus-xpack/",
      "input": "docs/out/xml",
      "output": "docs/mdx",
      "options": {
        "cleanOutput": true,
        "collapseMembers": true,
        "linkToSource": true,
        "frontMatter": {
          "sidebar_position": 1
        }
      }
    }
  }
}